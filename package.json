{
  "name": "365weed",
  "version": "1.0.0",
  "description": "365 Days of Weed - Cloudflare Workers PWA with location-aware ads",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --local",
    "dev:remote": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest --pool=threads --poolOptions.workers=1",
    "test:watch": "vitest --pool=threads --poolOptions.workers=1 --watch",
    "test:coverage": "vitest --pool=threads --poolOptions.workers=1 --coverage",
    "test:integration": "vitest --pool=threads --poolOptions.workers=1 --run worker/**/*.integration.test.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run test:e2e",
    "migrations:create": "wrangler d1 migrations create 365db",
    "migrations:apply": "wrangler d1 migrations apply 365db",
    "migrations:apply:prod": "wrangler d1 migrations apply 365db --remote",
    "app:dev": "cd app && npm run dev",
    "app:build": "cd app && npm run build"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "pwa",
    "cannabis",
    "ads"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "hono": "^4.6.14",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.19",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@playwright/test": "^1.49.1",
    "@types/node": "^22.10.2",
    "miniflare": "^3.20241106.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "^3.96.0"
  }
}
